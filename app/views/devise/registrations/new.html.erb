<section class="section-form-devise">
  <h2>S'inscrire</h2>
  <%= render "devise/shared/error_messages", resource: resource %>
  <div class="form-devise">
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <div class="field"><br />
        <%= f.label :email %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "fill-field" %>
      </div>
      <div class="field">
        <% f.label :password %>Mot de passe
        <% if @minimum_password_length %>
          <% @minimum_password_length %> comprenant au minimum :
          <em>
            <li>Huit caractères</li>
            <li>Une majuscule et une minuscule</li>
            <li>Un chiffre</li>
            <li>Un caractère spécial (#?!@$%^&*-)</li>
          </em>
        <% end %>
        <%= f.password_field :password, autocomplete: "new-password", class: "fill-field" %>
      </div>
      <div class="field">
        <% f.label :password_confirmation %>Confirmer mot de passe<br />
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "fill-field" %>
      </div>
      <div class="actions">
        <%= button_tag( :class => "btn btn-primary", :type => "submit" ) do %> Valider
        <% end %>
      </div>
    <% end %>
    <p class="text-center mt-3"><%= render "devise/shared/links" %></p>
  </div>
</section>
