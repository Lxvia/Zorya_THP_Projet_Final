<% @learnings.each do |learning| %>
  <div class="">
    <h5>Learning: <%= learning.name %></h5>
    <div>
      <% @users.each do |user| %>
        <h6><%= user.email %>
          <div id= "inscription_button_<%= learning.id %>_<%= user.id %>" class="">
            <%if user.learnings.include?(learning)%>
              <%= button_to "désinscrire", user_assignment_path(user.id, 
             @assignments.find_by(user_id: user.id, learning_id: learning.id)), remote: true, data: { confirm: "Êtes-vous sûr(e) ?" }, params: {user_id: user.id, learning_id: learning.id}, method: :delete, class: "form-btn" %>
            <% else %>
              <%= button_to 'inscrire', user_assignments_path(user.id), remote: true, params: {user_id: user.id, learning_id: learning.id} ,method: :post, class: "" %>
            <% end %>
          </div>
        </h6>
      <% end %>
    </div>
  </div>
  <hr class="">
<% end %>
