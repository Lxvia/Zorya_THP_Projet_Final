<!-- UPS user -->
<div id="usp-section" class="row align-items-center mb-5 pb-5">
  <div class="d-flex col-md align-items-center border-bottom border-md-0 mb-16pt mb-md-0 pb-16pt pb-md-0">
    <div class="rounded-circle bg-primary w-64 h-64 d-inline-flex align-items-center justify-content-center mr-16pt">
      <i class="bi bi-book text-white icon-24pt"></i>
    </div>
    <div class="flex">
      <div class="card-title mb-4pt">Choix du format</div>
      <p class="card-subtitle text-70">Nos cours sont disponibles au format texte ou vidéo, choisissez ce qui vous convient.</p>
    </div>
  </div>
  <div class="d-flex col-md align-items-center border-bottom border-md-0 mb-16pt mb-md-0 pb-16pt pb-md-0">
    <div class="rounded-circle bg-primary w-64 h-64 d-inline-flex align-items-center justify-content-center mr-16pt">
      <i class="bi bi-patch-check-fill text-white icon-24pt"></i>
    </div>
    <div class="flex">
      <div class="card-title mb-4pt">Fait par des experts</div>
      <p class="card-subtitle text-70">Toutes nos formations ont été réalisées par des experts en cybersécurité.</p>
    </div>
  </div>
  <div class="d-flex col-md align-items-center">
    <div class="rounded-circle bg-primary w-64 h-64 d-inline-flex align-items-center justify-content-center mr-16pt">
      <i class="bi bi-clock-history text-white icon-24pt"></i>
    </div>
    <div class="flex">
      <div class="card-title mb-4pt">Accés illimité</div>
      <p class="card-subtitle text-70">Cours et ressources disponibles en illimité et à vie.</p>
    </div>
  </div>
</div>
<!-- UPS user end -->
<!-- INFOS -->
<h2 class="text-center">Informations personnelles:</h2>
<div class="section-user-infos mb-5">
  <div class="user-infos-1 d-flex flex-row flex-wrap">
    <div class="user-avatar"><%= image_tag('whiteUser.svg', class: 'user-avatar-img', alt: 'logo') %></div>
    <div class="user-h4">
      <span class="user-span">
        <h4>Nom :</h4>
        <p><%= @user.last_name %></p>
      </span>
      <span class="user-span">
        <h4>Prénom :</h4>
        <p><%= @user.first_name %></p>
      </span>
      <span class="user-span">
        <h4>Email :</h4>
        <p><%= @user.email %></p>
      </span>
      <% if @user.company.nil? %>
        <p><i>Vous êtes actuellement rattaché à aucune entreprise. Vous êtes un collaborateur? Veuillez contacter votre responsable pour le rattachement. Vous êtes le responsable? Veuillez prendre contact avec votre Gestionnaire ou nous contacter pour souscrire à une offre.</i></p>
      <%else%>
        <span class="user-span">
          <h4>Entreprise :</h4>
          <p><%= @user.company.name %></p>
        </span>
      <% end %>
    </div>
  </div>
  <div class="user-infos-2">
  </div>
  <hr>
  <div class="section-btn-infos">
    <p id="btn-user-infos" class="btn btn-secondary-outline"><%= link_to "Modifier mes informations de connexion",  edit_user_registration_path %></p>
        <p id="btn-user-infos" class="btn btn-secondary-outline"><%= link_to "Modifier mon nom",  edit_user_path(current_user.id) %></p>
    <p id="btn-user-infos" class="btn btn-primary"><%= link_to "Voir mes parcours",  user_assignments_path(@user.id) %></p>
    <% if @user.company.nil? %>
      <p id="btn-user-infos" class="btn btn-primary"><%= link_to "Nous contacter", new_contact_path()%></p>
    <% end %>
  </div>
</div>
<!-- INFOS END -->
