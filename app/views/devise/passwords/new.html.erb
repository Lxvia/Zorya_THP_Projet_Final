<section class="section-form-devise">
  <h2>Mot de passe oubli√© ?</h2>
  <div class="form-devise">
    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>
      <div class="field">
        <%= f.label :email %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "fill-field" %>
      </div>
      <div class="actions">
        <%= button_tag( :class => "btn btn-primary", :type => "submit" ) do %> Recevoir un mail 
        <% end %>
      </div>
    <% end %>
    <p class="text-center mt-3"> <%= render "devise/shared/links" %></p>
  </div>
</section>
