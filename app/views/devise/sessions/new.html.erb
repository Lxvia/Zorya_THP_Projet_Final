<section class="section-form-devise">
  <h2>Se connecter</h2>
  <div class="form-devise">
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="field">
        <%= f.label :email %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "fill-field" %>
      </div>
      <div class="field">
        <% f.label :password %>Mot de passe<br />
        <%= f.password_field :password, autocomplete: "current-password", class: "fill-field" %>
      </div>
      <% if devise_mapping.rememberable? %>
        <div class="field">
          <% f.check_box :remember_me %>Se souvenir de moi
          <% f.label :remember_me %>
        </div>
      <% end %>
      <div class="actions">
        <%= button_tag( :class => "btn btn-primary", :type => "submit" ) do %> Connexion
                                <% end %>
      </div>
    <% end %>
    <p class="text-center mt-3"><%= render "devise/shared/links" %></p>
  </div>
</section>
